# Server Configuration
PORT=8080
NODE_ENV=development

# Fly.io Configuration (required)
FLY_STREAM_URL=wss://your-app-name.fly.dev/stream

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Database (Neon Postgres)
DATABASE_URL=postgresql://username:password@ep-xxxxx.us-east-2.aws.neon.tech/neondb?sslmode=require
# Database schema name (default: public)
DB_SCHEMA=public

# Voice AI APIs
DEEPGRAM_API_KEY=your-deepgram-key-here
GROQ_API_KEY=your-groq-key-here
GOOGLE_API_KEY=your-google-gemini-key-here
CARTESIA_API_KEY=your-cartesia-key-here

# Your Webhook Configuration (optional - for receiving call data)
WEBHOOK_URL=https://your-domain.com/api/webhooks/call-data
WEBHOOK_SECRET=your-webhook-secret-here

# Admin API
ADMIN_API_KEY=generate-random-hex-32-chars

# Optional: Block specific phone numbers from connecting
BLOCKED_NUMBER=

# Demo phone number (for demo mode routing)
DEMO_PHONE_NUMBER=+15551234567

# Optional: Force LLM provider (auto, groq, or gemini)
LLM_PROVIDER=auto
